<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_number" 
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purramid_copyright_title"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/purramid_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/purramid_copyright_text"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balsamiq_sans_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/balsamiq_sans_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/balsamiq_sans_license_text" 
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sphere_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/sphere_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sphere_attribution_text" 
            android:autoLink="web"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cities_database_title"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/cities_database_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cities_database_attribution_text"
            android:autoLink="web"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_privacy_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/data_privacy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_privacy_statement" 
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_practices_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/best_practices_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_practices_content" 
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acknowledgements_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/acknowledgements_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acknowledgements_content" 
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eula_title" 
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/eula_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eula_content" 
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_information_title" 
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/contact_information_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_information_text"
            android:textAppearance="?android:textAppearanceSmall" />

    </LinearLayout>

</ScrollView>